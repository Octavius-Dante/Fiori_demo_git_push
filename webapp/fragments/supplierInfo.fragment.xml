<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
    <f:SimpleForm>
        <Label text="Suppleir Name" />
        <Text text="{To_Supplier/COMPANY_NAME}" />
        
        <Label text="Website" class="sapUiSmallMarginTop"/>
        <Link text="{To_Supplier/WEB_ADDRESS}" class="sapUiSmallMarginTop"/>
        
        <Label text="Supplier Id" class="sapUiSmallMarginTop"/>
        <Text text="{To_Supplier/BP_ID}" class="sapUiSmallMarginTop"/>

        <Label text="Address" />
        <Text text="{To_Supplier/BUILDING}, {To_Supplier/STREET}, {To_Supplier/CITY}, {To_Supplier/COUNTRY}"/>

        <Label text="Phone" />
        <Text text="{To_Supplier/PHONE_NUMBER}" />
    </f:SimpleForm>    
</core:FragmentDefinition>